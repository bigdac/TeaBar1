<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:overScrollMode="never"
    android:scrollbars="none">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_power_fh"
        android:layout_below="@+id/tv_main_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:src="@mipmap/login_back"
        />
    <TextView
        android:id="@+id/tv_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_title"
        android:layout_below="@+id/iv_power_fh"
        android:layout_marginLeft="15dp"
        android:textSize="30sp"
        android:textColor="@color/login_black"
        />
    <RelativeLayout
        android:id="@+id/rl_search_search"
        android:layout_width="match_parent"
        android:background="@drawable/search_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/tv_power"
        android:layout_marginTop="10dp"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_search_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/main_ss3"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/et_search_search"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@null"
            android:layout_toRightOf="@+id/iv_search_pic"
            android:layout_toLeftOf="@+id/iv_search_del"
            android:layout_marginRight="10dp"
            android:hint="@string/search_mess"
            android:textColor="@color/social_gray"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_search_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/search_title"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:textColor="@color/login_black"
            />
        <ImageView
            android:id="@+id/iv_search_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/search_del"
            android:layout_toLeftOf="@+id/tv_search_search"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:visibility="invisible"
            />
        <View
            android:id="@+id/view_search_bz"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c9c9c9"
            android:layout_toRightOf="@+id/iv_search_del"
            android:layout_marginLeft="-9dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"

            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_history_del"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/history_del"
        android:layout_alignTop="@+id/li_search_old"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:scaleType="centerInside"
        android:layout_marginTop="5dp"
        android:visibility="invisible"
        />
    <LinearLayout
        android:id="@+id/li_search_old"
        android:layout_below="@+id/rl_search_search"
        android:visibility="invisible"
        android:orientation="vertical"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_width="match_parent"
        android:layout_height="1dp">
        <TextView
            android:id="@+id/tv_search_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_history"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginTop="20dp"
            />

        <teabar.ph.com.teabar.view.FlowTagView
            android:id="@+id/fv_history"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </teabar.ph.com.teabar.view.FlowTagView>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_main_tealist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/li_search_old"
        android:overScrollMode="never"
        android:paddingLeft="5dp"

        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_main_jh"
        android:layout_below="@+id/rv_main_tealist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingBottom="20dp"
        />

